{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["./src/*"],
      "@spt/*": ["./types/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "types", "**/test/**", "**/dist/**"]
}